<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:CardView="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:layout_marginTop="5dp"
    android:background="#EEEEEE"
    android:orientation="horizontal"
    android:padding="10dp"
    CardView:cardBackgroundColor="#EEEEEE"
    CardView:cardCornerRadius="10dp"
    CardView:cardElevation="2dp">

    <LinearLayout
        android:id="@+id/linearlayoutfav"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:background="#EEEEEE"
        android:orientation="vertical"
        android:padding="5dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/etoileFav"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/nomEvent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="test"
            android:textColor="@color/colorPrimary"
            android:textSize="15sp"
            android:textStyle="bold"
            tools:layout_conversion_absoluteHeight="20dp"
            tools:layout_conversion_absoluteWidth="136dp"
            tools:layout_editor_absoluteX="91dp"
            tools:layout_editor_absoluteY="11dp" />

        <TextView
            android:id="@+id/nomEcole"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="test1"
            android:textColor="@color/colorPrimary"
            android:textSize="12sp"
            android:textStyle="italic"
            tools:layout_conversion_absoluteHeight="16dp"
            tools:layout_conversion_absoluteWidth="78dp"
            tools:layout_editor_absoluteX="95dp"
            tools:layout_editor_absoluteY="37dp" />

        <TextView
            android:id="@+id/horairesFav"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="40dp"
            android:text="10:30 - 11h15"
            android:textColor="@color/colorPrimary"
            android:textSize="12sp"
            android:textStyle="italic"
            tools:layout_conversion_absoluteHeight="16dp"
            tools:layout_conversion_absoluteWidth="45dp"
            tools:layout_editor_absoluteX="95dp"
            tools:layout_editor_absoluteY="70dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/etoileFav"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:layout_gravity="right"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_marginRight="5dp"
        app:layout_constraintLeft_toRightOf="@+id/linearlayoutfav"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/supprFav"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:contentDescription="suppr fav"
            android:src="@drawable/star"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:layout_conversion_absoluteHeight="82dp"
            tools:layout_conversion_absoluteWidth="32dp" />
    </LinearLayout>

</android.support.v7.widget.CardView>