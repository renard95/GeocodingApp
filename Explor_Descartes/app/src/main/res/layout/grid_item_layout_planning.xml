<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:background="#FFFFFF"
    android:orientation="horizontal"
    android:padding="5dp">


    <LinearLayout
        android:id="@+id/icone"
        android:layout_width="wrap_content"
        android:layout_height="130dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/linearLayout"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/iconEcole"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:contentDescription="@string/imageEcole"
            android:src="@drawable/wait"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:layout_conversion_absoluteHeight="80dp"
            tools:layout_conversion_absoluteWidth="80dp" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="0dp"
        android:layout_height="130dp"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:padding="5dp"
        app:layout_constraintLeft_toRightOf="@+id/icone"
        app:layout_constraintRight_toLeftOf="@+id/etoile"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/nom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/nom_EVENT"
            android:textColor="@color/colorPrimary"
            android:textSize="15sp"
            android:textStyle="bold"
            tools:layout_conversion_absoluteHeight="20dp"
            tools:layout_conversion_absoluteWidth="136dp"
            tools:layout_editor_absoluteX="91dp"
            tools:layout_editor_absoluteY="11dp" />

        <TextView
            android:id="@+id/nomEcole"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/nom_ecole"
            android:textColor="@color/colorPrimary"
            android:textSize="12sp"
            android:textStyle="italic"
            tools:layout_conversion_absoluteHeight="16dp"
            tools:layout_conversion_absoluteWidth="78dp"
            tools:layout_editor_absoluteX="95dp"
            tools:layout_editor_absoluteY="37dp" />

        <TextView
            android:id="@+id/nomBatiment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/nom_bat"
            android:textColor="@color/colorPrimary"
            android:textSize="12sp"
            android:textStyle="italic"
            tools:layout_conversion_absoluteHeight="16dp"
            tools:layout_conversion_absoluteWidth="91dp"
            tools:layout_editor_absoluteX="95dp"
            tools:layout_editor_absoluteY="54dp" />

        <TextView
            android:id="@+id/horaires"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/horaires"
            android:textColor="@color/colorPrimary"
            android:textSize="12sp"
            android:textStyle="italic"
            tools:layout_conversion_absoluteHeight="16dp"
            tools:layout_conversion_absoluteWidth="45dp"
            tools:layout_editor_absoluteX="95dp"
            tools:layout_editor_absoluteY="70dp" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/etoile"
        android:layout_width="wrap_content"
        android:layout_height="130dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintLeft_toRightOf="@+id/linearLayout"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/favorite"
            android:layout_width="32dp"
            android:layout_height="32dp"

            android:contentDescription="@string/favori"
            android:src="@drawable/star_stroked"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:layout_conversion_absoluteHeight="82dp"
            tools:layout_conversion_absoluteWidth="32dp" />
    </LinearLayout>

</android.support.constraint.ConstraintLayout>